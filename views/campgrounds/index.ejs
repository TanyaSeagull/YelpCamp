<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>
<% for (let i = 0; i < campgrounds.length; i++) { %>
    <% let camp = campgrounds[i]; %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% 
                // Случайное изображение от Lorem Picsum
                const randomImageId = Math.floor(Math.random() * 1000) + 1;
                const imageUrl = `https://picsum.photos/id/${randomImageId}/400/300`;
                %>
                
                <img 
                    crossorigin="anonymous" 
                    class="img-fluid" 
                    alt="<%= camp.title %>" 
                    src="<%= imageUrl %>"
                    style="height: 200px; object-fit: cover; width: 100%;"
                    onerror="this.src='https://picsum.photos/400/300?random=1'"
                    loading="lazy"
                >
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const campgrounds = <%- campgroundsGeoJSON || 'null' %>;
    const maptilerApiKey = '<%= process.env.MAPTILER_API_KEY %>';
    
    console.log('Index page data:', { 
        campgrounds: campgrounds ? campgrounds.features.length + ' features' : 'null',
        apiKey: maptilerApiKey ? 'set' : 'not set' 
    });
</script>

<script src="/javascripts/clusterMap.js"></script>